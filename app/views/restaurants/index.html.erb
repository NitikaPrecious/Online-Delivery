<h1>Listing Restaurant</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Contact_number_1</th>
      <th>Contact_number_2</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.phone_1%></td>
        <td><%= restaurant.phone_2%></td>
        <td><%= link_to "Show", restaurant %>  <%= link_to "Edit", edit_restaurant_path(restaurant) %> <%= link_to "Destroy", restaurant, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "New restaurant", new_restaurant_path %>
